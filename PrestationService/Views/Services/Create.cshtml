@model PrestationService.Models.Service

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_admin_Layout.cshtml";
}
<div class="single-product-tab-area mg-b-30">
    <!-- Single pro tab review Start-->
    <div class="single-pro-review-area">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="review-tab-pro-inner">
                        <ul id="myTab3" class="tab-review-design">
                            <li class="active"><a href="#description"><i class="icon nalika-edit" aria-hidden="true"></i> Creer Service</a></li>
                             </ul>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                        <div id="myTabContent" class="tab-content custom-product-edit">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="product-tab-list tab-pane fade active in" id="description">
                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="review-content-section">
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon"><i class="icon nalika-edit" aria-hidden="true"></i> </span>
                                                <div>
                                                    @Html.EditorFor(model => model.libelle, new { htmlAttributes = new { @class = "form-control", placeholder = "Libelle" } })
                                                    @Html.ValidationMessageFor(model => model.libelle, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon"><i class="fa fa-usd" aria-hidden="true"></i></span>
                                                <div>
                                                    @Html.EditorFor(model => model.prix, new { htmlAttributes = new { @class = "form-control", placeholder = "Prix" } })
                                                    @Html.ValidationMessageFor(model => model.prix, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon"><i class="icon nalika-new-file" aria-hidden="true"></i></span>
                                                <div>
                                                    @Html.EditorFor(model => model.nbHeure, new { htmlAttributes = new { @class = "form-control", placeholder = "Nombre d'heure" } })
                                                    @Html.ValidationMessageFor(model => model.nbHeure, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="review-content-section">

                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon"><i class="icon nalika-favorites-button" aria-hidden="true"></i></span>
                                                <div>
                                                    @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control", placeholder = "Description" } })
                                                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon"><i class="icon nalika-user" aria-hidden="true"></i></span>
                                                <div>
                                                    @Html.DropDownList("IdProfessionnel", null, htmlAttributes: new { @class = "form-control", placeholder = "professionnelle" })
                                                    @Html.ValidationMessageFor(model => model.IdProfessionnel, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon"><i class="icon nalika-new-file" aria-hidden="true"></i></span>
                                                <div>
                                                    @Html.DropDownList("idSouCat", null, htmlAttributes: new { @class = "form-control", placeholder = "Sous Categorie" })
                                                    @Html.ValidationMessageFor(model => model.idSouCat, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="text-center custom-pro-edt-ds">
                                            <button type="submit" value="Create" class="btn btn-ctl-bt waves-effect waves-light m-r-10">
                                                Save
                                            </button>
                                            <button type="button" class="btn btn-ctl-bt waves-effect waves-light">
                                                Discard
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                         
                        </div>
                        }
                     </div>
                </div>
            </div>
        </div>
    </div>
</div>
