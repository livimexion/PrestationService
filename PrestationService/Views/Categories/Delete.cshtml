@model PrestationService.Models.Categorie

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>

    <div class="single-product-tab-area mg-b-30">
        <!-- Single pro tab review Start-->
        <div class="single-pro-review-area">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="review-tab-pro-inner">
                            <ul id="myTab3" class="tab-review-design">
                                <li class="active"><a href="#description"><i class="icon nalika-edit" aria-hidden="true"></i> Supprimer Categorie</a></li>
                            </ul>
                            <div id="myTabContent" class="tab-content custom-product-edit">

                                <div class="product-tab-list tab-pane fade active in" id="description" style="background-color:lightsteelblue">
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                            <div class="review-content-section">
                                                <dl class="dl-horizontal">
                                                    <dt>
                                                        @Html.DisplayNameFor(model => model.libCat)
                                                    </dt>

                                                    <dd>
                                                        @Html.DisplayFor(model => model.libCat)
                                                    </dd>

                                                    <dt>
                                                        @Html.DisplayNameFor(model => model.description)
                                                    </dt>

                                                    <dd>
                                                        @Html.DisplayFor(model => model.description)
                                                    </dd>

                                                    <dt>
                                                        @Html.DisplayNameFor(model => model.photo)
                                                    </dt>

                                                    <dd>
                                                        @Html.DisplayFor(model => model.photo)
                                                    </dd>

                                                </dl>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <div class="text-center custom-pro-edt-ds">
                                                <input type="submit" value="Delete" class="btn btn-default" /> |
                                                @Html.ActionLink("Back to List", "Index")
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
